        function addition(){
            let a=document.getElementById('prindo').innerText;
            console.log(a);
            document.getElementById('prindo').innerHTML=parseInt(a)+1;
        }
        function xyz(){
            let a=document.getElementById('prindo').innerText;
            console.log(a);
            document.getElementById('prindo').innerHTML=parseInt(a)-1;
        }
    </script>
